extends layout

block main  
    div(class='cust')
        if users      
            table(class='table table-cust')
                tr
                    th Id
                    th First Name
                    th Last Name
                    th Email  
                    th Age 
                    th Delete
                    th Edit
                for user in users
                    tr
                        td= user.id
                        td= user.name         
                        td= user.lastname
                        td= user.email
                        td= user.age
                        td                        
                            button(class='btn btn-danger' id= user.id onclick= 'deleteUser('+user.id+')' ) X
                        td
                            button(class='btn btn-warning' onclick= `showEditModal(${JSON.stringify(user)})` ) Edit                                        
                tr
                    td
                    td
                    td
                    td
                    td
                    td
                    td
                        button(class='btn btn-success' onclick= 'showModal()') Add user 
        else if user
            table(class='table table-cust')
                tr
                    th Id
                    th First Name
                    th Last Name
                    th Email  
                    th Age     
                    th Delete    
                    th Edit    
                tr
                    td= user.id
                    td= user.name         
                    td= user.lastname
                    td= user.email
                    td= user.age
                    td   
                        button(class='btn btn-danger' id= user.id onclick= 'deleteUser('+user.id+')') X
                    td
                        button(class='btn btn-warning' onclick= `showEditModal(${JSON.stringify(user)})`) Edit            

        else        
            table(class='table')
                tr
                    th No users here!!   
    div(id='myModal' class='modal')
        div(class='modal-content')
            span(class='close' onclick= 'hideModal()') X
            h1(id= "modal_title") Create new user
            form(action='' id='myForm' method='')
                label(for='id') Id
                input(type='hidden' id='id' name='id' value='' placeholder='ID..' readonly)
                label(for='name') First Name
                input(type='text' id='name' name='name' value='' placeholder='Your first name..')
                label(for='lastname') Last Name
                input(type='text' id='lastname' name='lastname' value='' placeholder='Your last name..')
                label(for='email') Email
                input(type='email' id='email' name='email' value='' placeholder='Your email..')
                label(for='age') Age
                input(type='text' id='age' name='age' value='' placeholder='Your age..')   
                input(type='submit' id='btn-add' value='Submit' onclick='addUser()')  
                input(type='submit' id='btn-edit' value='Submit' onclick='editUser()')  
    script(src='/script.js') 